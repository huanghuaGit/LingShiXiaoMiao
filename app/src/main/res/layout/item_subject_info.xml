<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="5dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_subject_info_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" >
    </com.android.volley.toolbox.NetworkImageView>

    <RelativeLayout
        android:padding="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_heart"
         >
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_subject_info_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_above="@id/tv_subject_info_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_centerInParent="true"
            android:background="@drawable/icon_heart_white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_subject_info_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:textColor="#FFFFFF" />

</RelativeLayout>