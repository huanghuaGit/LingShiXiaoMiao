<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
 		android:background="@drawable/bg_user">
 		<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/btn_set_white" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" 
            android:gravity="center_horizontal"
            >
           <ImageView 
            android:id="@+id/touxiang"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            
            android:src="@drawable/default_photo_person"/>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:orientation="horizontal"
	            android:paddingTop="10dp"
	            >
	            <TextView 
	                android:id="@+id/registered"
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:textColor="@color/white"
		            android:paddingRight="10dp"
		            android:text="注册"/>
	            <TextView 
		       		android:layout_width="wrap_content"
		       		android:layout_height="wrap_content"
		       		android:textColor="@color/white"
		       		android:text=" / "/>	
			    <TextView 
			        android:id="@+id/login"
			       	android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:paddingLeft="10dp"
			       	android:textColor="@color/white"
			       	android:text="登陆"/>
	        </LinearLayout> 
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/btn_car_white" />
       
    </RelativeLayout>
	
    <ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	android:layout_marginTop="10dp"/>
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="@color/white"
   	    >
        <!--  代付款  -->
   	    <LinearLayout 
   	        android:layout_weight="1"
   	        android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:gravity="center_horizontal"
   	  		android:orientation="vertical"
   	        >
   	        <ImageView 
   	            android:paddingTop="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:src="@drawable/icon_pay_big"
   	            />
   	        <TextView 
   	            android:padding="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="待付款"
   	            />
   	    </LinearLayout>
   	     <!-- 待发货  -->
   	    <LinearLayout 
   	        android:layout_weight="1"
   	        android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:gravity="center_horizontal"
   	  		android:orientation="vertical"
   	        >
   	        <ImageView 
   	            android:paddingTop="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:src="@drawable/icon_delivery"
   	            />
   	        <TextView 
   	            android:padding="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="待发货 "
   	            />
   	    </LinearLayout>
   	    <!-- 待收货  -->
   	    <LinearLayout 
   	        android:layout_weight="1"
   	        android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:gravity="center_horizontal"
   	  		android:orientation="vertical"
   	        >
   	        <ImageView 
   	            android:paddingTop="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:src="@drawable/icon_logistics"
   	            />
   	        <TextView 
   	            android:padding="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="待收货"
   	            />
   	    </LinearLayout>
   	    <!-- 待评价  -->
   	    <LinearLayout 
   	        android:layout_weight="1"
   	        android:layout_width="0dp"
   	    	android:layout_height="wrap_content"
   	    	android:gravity="center_horizontal"
   	  		android:orientation="vertical"
   	        >
   	        <ImageView 
   	            android:paddingTop="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:src="@drawable/icon_evaluate"
   	            />
   	        <TextView 
   	            android:padding="10dp"
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="待评价"
   	            />
   	    </LinearLayout>
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#ffffff">
   	    <ImageView
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_order" 
   	        />
   	    <TextView 
   	        android:padding="10dp"
   	        android:layout_width="0dp"
   	        android:layout_weight="1"
   	        android:layout_height="wrap_content"
   	        android:text="我的订单"
   	        />
   	    <TextView 
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:textSize="11dp"
   	        android:text="查看全部订单"
   	       	android:textColor="#d3d3d3"/>
   	    <ImageView 
   	      	android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_arrow" 
   	         />
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
   	
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	android:layout_marginTop="10dp"
       	/>
   	
   	
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#ffffff">
   	    <ImageView
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_coupon" 
   	        />
   	    <TextView 
   	        android:padding="10dp"
   	        android:layout_width="0dp"
   	        android:layout_weight="1"
   	        android:layout_height="wrap_content"
   	        android:text="我的优惠券"
   	        />
   	    <ImageView 
   	      	android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_arrow" 
   	         />
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#ffffff"
   	    android:gravity="center_vertical">
   	    <ImageView
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_like_mine" 
   	        />
   	    <TextView 
   	        android:id="@+id/tv_fragment_mine_mycollection"
   	        android:padding="10dp"
   	        android:layout_width="0dp"
   	        android:layout_weight="1"
   	        android:layout_height="wrap_content"
   	        android:text="我的收藏"
   	        />
   	    <ImageView 
   	      	android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_arrow" 
   	         />
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
   	
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	android:layout_marginTop="10dp"
       	/>
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#ffffff">
   	    <ImageView
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_service" 
   	        />
   	    <TextView 
   	        android:id="@+id/tv_contactcustomerservice"
   	        android:padding="10dp"
   	        android:layout_width="0dp"
   	        android:layout_weight="1"
   	        android:layout_height="wrap_content"
   	        android:text="联系客服"
   	        />
   	    <ImageView 
   	      	android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_arrow" 
   	         />
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="#ffffff">
   	    <ImageView
   	        android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_feedback" 
   	        />
   	    <TextView 
   	        android:padding="10dp"
   	        android:layout_width="0dp"
   	        android:layout_weight="1"
   	        android:layout_height="wrap_content"
   	        android:text="意见反馈"
   	        />
   	    <ImageView 
   	      	android:padding="10dp"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:src="@drawable/icon_arrow" 
   	         />
   	</LinearLayout>
   	<ImageView 
        android:layout_height="0.5dp"
       	android:layout_width="match_parent"
       	android:background="#e6e6e6"
       	/>
	 

</LinearLayout>
