<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_home_brands_special_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_lover" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_home_brands_special_lingshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_home_brands_special_body"
            android:src="@drawable/btn_movie" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_home_brands_special_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_home_brands_special_body"
            android:layout_alignLeft="@+id/image_home_brands_special_lingshi"
            android:src="@drawable/btn_beer" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_home_brands_special_jingxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_home_brands_special_lingshi"
            android:layout_toRightOf="@+id/image_home_brands_special_breakfast"
            android:src="@drawable/btn_beer" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_dot" />

        <TextView
            android:id="@+id/tv_new_title_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/new_title_big"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_new_title_sml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/new_title_sml"
            android:textColor="#959695"
            android:textSize="13sp" />
    </LinearLayout>
    
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#CDCDCD" />

</LinearLayout>