<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="15dp" >

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/textView"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tab_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_tab_title"
        android:layout_below="@+id/tv_tab_title"
        android:layout_marginTop="18dp"
        android:text="@string/textView"
        android:textColor="#969696"
        android:textSize="12sp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_tab"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_tab_desc"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/default_home_class84x84" />

</RelativeLayout>